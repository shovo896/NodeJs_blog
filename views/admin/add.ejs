<div class="admin-title">
  <h2>Add Post</h2>
  <a href="/admin/dashboard" class="button">Back to Dashboard</a>
</div>

<% if (typeof message !== "undefined" && message) { %>
  <p><%= message %></p>
<% } %>

<form action="/add-post" method="POST">
  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post title" name="title">

<label for="body"><b>Body</b></label>
<textarea name="body" rows="10" placeholder="Write your post..."></textarea>

<label for="imageUrls"><b>Image URLs (one per line)</b></label>
<textarea name="imageUrls" rows="4" placeholder="https://example.com/photo1.jpg&#10;https://example.com/photo2.png"></textarea>

<label for="videoUrls"><b>Video URLs (one per line)</b></label>
<textarea name="videoUrls" rows="4" placeholder="https://example.com/video.mp4"></textarea>

<input type="submit" value="Create" class="btn">
</form>
