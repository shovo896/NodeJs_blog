<div class="admin-title">
  <h2>Edit Post</h2>
  <a href="/admin/dashboard" class="button">Back to Dashboard</a>
</div>

<div class="admin-post-controls">
  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn">
  </form>
</div>

<% if (typeof message !== "undefined" && message) { %>
  <p><%= message %></p>
<% } %>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">
  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post title" name="title" value="<%= data.title %>">

  <label for="body"><b>Body</b></label>
  <textarea name="body" rows="10" placeholder="Write your post..."><%= data.body %></textarea>

  <input type="submit" value="Update" class="btn">
</form>
